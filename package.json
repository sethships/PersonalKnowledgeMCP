{
  "name": "personal-knowledge-mcp",
  "version": "1.0.0",
  "description": "AI-first knowledge management service built on the Model Context Protocol (MCP)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --external chromadb && bun build src/cli.ts --outdir dist --target bun --external chromadb",
    "dev": "bun --watch src/index.ts",
    "start": "bun run dist/index.js",
    "cli": "bun run dist/cli.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rag",
    "semantic-search",
    "knowledge-management",
    "vector-database",
    "chromadb",
    "embeddings",
    "ai-assistant",
    "bun"
  ],
  "author": "Seth Buchanan",
  "license": "TBD",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chromadb": "^1.8.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "glob": "^10.3.10",
    "ignore": "^5.3.1",
    "openai": "6.10.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "simple-git": "^3.25.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sethb75/PersonalKnowledgeMCP.git"
  },
  "bugs": {
    "url": "https://github.com/sethb75/PersonalKnowledgeMCP/issues"
  },
  "homepage": "https://github.com/sethb75/PersonalKnowledgeMCP#readme",
  "trustedDependencies": [
    "@modelcontextprotocol/sdk"
  ]
}
