{
  "name": "personal-knowledge-mcp",
  "version": "1.0.0",
  "description": "AI-first knowledge management service built on the Model Context Protocol (MCP)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/index.js --target bun --external chromadb && bun build src/cli/index.ts --outfile dist/cli.js --target bun --external chromadb",
    "dev": "bun --watch src/index.ts",
    "start": "bun run dist/index.js",
    "cli": "bun run dist/cli.js",
    "test": "bun test tests/example.test.ts tests/integration tests/mcp tests/services tests/unit tests/cli tests/helpers tests/fixtures tests/auth && bun test tests/isolated",
    "test:watch": "bun test --watch tests/example.test.ts tests/integration tests/mcp tests/services tests/unit tests/cli tests/helpers tests/fixtures tests/auth",
    "test:coverage": "bun test --coverage tests/example.test.ts tests/integration tests/mcp tests/services tests/unit tests/cli tests/helpers tests/fixtures tests/auth && bun test tests/isolated",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "bench": "RUN_SCALE_BENCHMARKS=true bun test tests/benchmarks/",
    "bench:population": "RUN_SCALE_BENCHMARKS=true bun test tests/benchmarks/graph-population.bench.ts",
    "bench:query": "RUN_SCALE_BENCHMARKS=true bun test tests/benchmarks/graph-query-scale.bench.ts",
    "bench:incremental": "RUN_SCALE_BENCHMARKS=true bun test tests/benchmarks/incremental-update-scale.bench.ts",
    "bench:full": "bun tests/benchmarks/run-scale-tests.ts --scale large --suite all",
    "bench:quick": "bun tests/benchmarks/run-scale-tests.ts --scale small --suite all",
    "bench:report": "bun tests/benchmarks/run-scale-tests.ts --scale large --suite all --report markdown --output perf-report.md",
    "test:scale": "bun test tests/integration/graph/scale-performance.test.ts",
    "test:scale:full": "SCALE_TEST_SIZE=large bun test tests/integration/graph/scale-performance.test.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rag",
    "semantic-search",
    "knowledge-management",
    "vector-database",
    "chromadb",
    "embeddings",
    "ai-assistant",
    "bun"
  ],
  "author": "Seth Bibler",
  "license": "MIT",
  "bin": {
    "pk-mcp": "./dist/cli.js"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "2.17.2",
    "chalk": "5.6.2",
    "chokidar": "5.0.0",
    "chromadb": "^1.8.1",
    "cli-table3": "0.6.5",
    "commander": "^12.1.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "glob": "^10.3.10",
    "ignore": "^5.3.1",
    "neo4j-driver": "6.0.1",
    "openai": "6.10.0",
    "openid-client": "6.8.1",
    "ora": "9.0.0",
    "picomatch": "4.0.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "simple-git": "^3.25.0",
    "tree-sitter-c": "0.24.1",
    "tree-sitter-cpp": "0.23.4",
    "tree-sitter-go": "0.25.0",
    "tree-sitter-java": "0.23.5",
    "tree-sitter-php": "0.24.2",
    "tree-sitter-ruby": "0.23.1",
    "tree-sitter-rust": "0.23.2",
    "web-tree-sitter": "0.26.3",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "^20.11.19",
    "@types/picomatch": "4.0.2",
    "@types/semver": "7.7.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "tree-sitter-javascript": "0.25.0",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "0.23.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sethships/PersonalKnowledgeMCP.git"
  },
  "bugs": {
    "url": "https://github.com/sethships/PersonalKnowledgeMCP/issues"
  },
  "homepage": "https://github.com/sethships/PersonalKnowledgeMCP#readme",
  "trustedDependencies": [
    "@modelcontextprotocol/sdk"
  ]
}
