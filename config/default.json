{
  "server": {
    "name": "personal-knowledge-mcp",
    "version": "1.0.0"
  },
  "chromadb": {
    "host": "${CHROMADB_HOST:localhost}",
    "port": "${CHROMADB_PORT:8000}"
  },
  "embedding": {
    "provider": "openai",
    "model": "${EMBEDDING_MODEL:text-embedding-3-small}",
    "dimensions": "${EMBEDDING_DIMENSIONS:1536}",
    "batchSize": "${EMBEDDING_BATCH_SIZE:100}"
  },
  "retry": {
    "maxRetries": "${MAX_RETRIES:3}",
    "initialDelayMs": "${RETRY_INITIAL_DELAY_MS:1000}",
    "maxDelayMs": "${RETRY_MAX_DELAY_MS:60000}",
    "backoffMultiplier": "${RETRY_BACKOFF_MULTIPLIER:2}"
  },
  "ingestion": {
    "repoClonePath": "${REPO_CLONE_PATH:./data/repos}",
    "chunkMaxTokens": "${CHUNK_MAX_TOKENS:500}",
    "chunkOverlapTokens": "${CHUNK_OVERLAP_TOKENS:50}",
    "maxFileSizeBytes": "${MAX_FILE_SIZE_BYTES:1048576}",
    "defaultExtensions": [
      ".js",
      ".ts",
      ".jsx",
      ".tsx",
      ".cs",
      ".py",
      ".java",
      ".go",
      ".rs",
      ".cpp",
      ".c",
      ".h",
      ".md",
      ".txt",
      ".rst",
      ".json",
      ".yaml",
      ".yml",
      ".toml"
    ],
    "defaultExcludes": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "bin/**",
      "obj/**",
      "*.min.js",
      "*.min.css",
      "package-lock.json",
      "yarn.lock"
    ]
  },
  "search": {
    "defaultLimit": "${DEFAULT_SEARCH_LIMIT:10}",
    "maxLimit": "${MAX_SEARCH_LIMIT:50}",
    "defaultThreshold": "${DEFAULT_SIMILARITY_THRESHOLD:0.7}",
    "snippetMaxLength": "${SNIPPET_MAX_LENGTH:500}"
  },
  "logging": {
    "level": "${LOG_LEVEL:info}",
    "format": "${LOG_FORMAT:pretty}"
  }
}
