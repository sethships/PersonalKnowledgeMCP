# Personal Knowledge MCP - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# MCP Service Configuration
# ============================================================================
MCP_SERVICE_HOST=0.0.0.0
MCP_SERVICE_PORT=8080
MCP_SERVICE_NAME=personal-knowledge-mcp
MCP_SERVICE_VERSION=0.1.0

# ============================================================================
# Instance Configuration
# ============================================================================
# Supported instances: private, work, public
INSTANCE_NAME=private

# ============================================================================
# Authentication
# ============================================================================
# Token-based authentication (generate a secure random token)
MCP_AUTH_TOKEN=your-secure-token-here

# Future: OAuth2 configuration
# OAUTH_CLIENT_ID=
# OAUTH_CLIENT_SECRET=
# OAUTH_TENANT_ID=

# ============================================================================
# Vector Database (Qdrant)
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=knowledge_vectors

# ============================================================================
# Graph Database (Neo4j)
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=knowledge_graph

# ============================================================================
# Document Store (PostgreSQL)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=knowledge_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=knowledge_store
POSTGRES_SSL_MODE=prefer

# ============================================================================
# LLM Provider Configuration
# ============================================================================
# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Anthropic (future use)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Ollama (local embeddings - future)
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================================================
# Repository Integration
# ============================================================================
# GitHub
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_API_URL=https://api.github.com

# Azure DevOps
AZURE_DEVOPS_ORG=your-organization
AZURE_DEVOPS_PAT=your-azure-devops-pat
AZURE_DEVOPS_PROJECT=your-project-name

# ============================================================================
# Ingestion Configuration
# ============================================================================
# Maximum file size for ingestion (in MB)
MAX_FILE_SIZE_MB=50

# Repository clone directory
REPO_CLONE_DIR=/tmp/cloned_repos

# Local folder watch paths (comma-separated)
LOCAL_WATCH_PATHS=/path/to/college/notes,/path/to/other/docs

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.py,.js,.ts,.tsx,.jsx,.java,.go,.rs,.cpp,.c,.h,.md,.txt,.pdf,.docx

# ============================================================================
# Performance Configuration
# ============================================================================
# Worker processes for ingestion
INGESTION_WORKERS=4

# Embedding batch size
EMBEDDING_BATCH_SIZE=100

# Query timeout (seconds)
QUERY_TIMEOUT_SECONDS=30

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/personal-knowledge-mcp/service.log

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Enable metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_DIR=/backups/personal-knowledge-mcp
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Cloud backup (optional)
# CLOUD_BACKUP_PROVIDER=azure|aws|gcp
# CLOUD_BACKUP_BUCKET=
# CLOUD_BACKUP_CREDENTIALS=

# ============================================================================
# Development/Debug Settings
# ============================================================================
DEBUG=false
ENABLE_SWAGGER_UI=true
ENABLE_PROFILING=false
